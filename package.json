{
  "name": "pmm",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.8.0",
  "description": "package.json module manager",
  "author": "liuseen-l",
  "license": "MIT",
  "homepage": "https://github.com/liuseen-l/pmm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liuseen-l/pmm.git"
  },
  "bugs": {
    "url": "https://github.com/liuseen-l/pmm/issues"
  },
  "keywords": [
    "package.json",
    "module",
    "manager"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./*": "./*"
  },
  "main": "dist/es/index.mjs",
  "module": "dist/es/index.mjs",
  "bin": {
    "pmm": "bin/pmm.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "esno ./src/cli.ts",
    "build": "pnpm run clean && rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "clean": "rimraf dist",
    "release": "bumpp -r",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.39.8",
    "@antfu/ni": "^0.21.8",
    "@changesets/cli": "^2.26.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/cli-progress": "^3.11.4",
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^20.8.7",
    "@types/yargs": "^17.0.29",
    "bumpp": "^9.2.0",
    "cli-progress": "^3.12.0",
    "enquirer": "^2.4.1",
    "eslint": "^8.52.0",
    "esno": "^0.17.0",
    "lint-staged": "^15.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "rollup-plugin-dts": "^6.1.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
